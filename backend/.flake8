[flake8]
max-line-length = 100
extend-ignore = E203,W503,E501,C901
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    migrations,
    node_modules,
    .tox,
    .eggs,
    *.egg,
    htmlcov,
    .mypy_cache,
    .pytest_cache,
    .vscode,
    .idea
per-file-ignores =
    __init__.py:F401
    settings.py:E501
    migrations/*:E501,F401
    tests.py:S101